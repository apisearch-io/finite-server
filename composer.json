{
    "name": "apisearch-io/react-socket-middleware-finite-server",
    "type": "library",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Apisearch Team",
            "email": "hello@puntmig.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "react/socket": "^0.8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "mmoreram/php-formatter": "1.3.1",
        "friendsofphp/php-cs-fixer": "^2.5.0"
    },
    "autoload": {
        "psr-4": {
            "Apisearch\\Socket\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apisearch\\Tests\\Socket\\": "tests",
            "React\\Tests\\Socket\\": "vendor/react/socket/tests"
        }
    },
    "scripts": {
        "fix-code": [
            "vendor/bin/php-cs-fixer fix --config=.php_cs",
            "vendor/bin/php-formatter f:h:f . --exclude=vendor",
            "vendor/bin/php-formatter f:s:f . --exclude=vendor",
            "vendor/bin/php-formatter f:u:s . --exclude=vendor"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}